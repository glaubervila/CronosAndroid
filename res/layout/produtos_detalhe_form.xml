<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:showDividers="none" >

    <TextView
        android:id="@+id/produto_detalhe_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.23"
        android:hint="Descricao"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/produto_detalhe_preco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:hint="9999.99"
        android:text="R$ 9999.99"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/produto_preco" />

    <EditText
        android:id="@+id/produto_detalhe_quantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:hint="Quantidade"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/produto_detalhe_observacao"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="top|left|center_vertical"
        android:hint="Observações do produto"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bt_produto_detalhe_adicionar"
            style="@style/ButtonAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>