<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<EditText
		android:id="@+id/produto_detalhe_descricao"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:ems="10"
		android:inputType="textMultiLine"
		android:text="Descrição" />
	
	<EditText
	    android:id="@+id/produto_detalhe_preco"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:inputType="numberDecimal"
	    android:text="99.99" />

	<EditText
	    android:id="@+id/produto_detalhe_quantidade"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:ems="10"
	    android:inputType="numberDecimal" >

	    <requestFocus />
	</EditText>
	
	<EditText
		android:id="@+id/produto_detalhe_observacao"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ems="10"
		android:inputType="textMultiLine"
		android:text="Observação" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:orientation="vertical" >

		<Button
		    android:id="@+id/bt_produto_detalhe_adicionar"
		    style="@style/ButtonAdd"
		    android:layout_width="match_parent"
		     />
		<!-- 		    android:text="@string/btn_adicionar" -->

	</LinearLayout>

</LinearLayout>