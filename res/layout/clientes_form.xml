<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<!--     android:background="@drawable/background_blue" > -->

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp" >

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/cliente_rb_pessoa_fisica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Pessoa Física" />

                <RadioButton
                    android:id="@+id/cliente_rb_pessoa_juridica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Pessoa Juridica" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome / Razão Social:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/cliente_et_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nome Completo ou Razão Social (obrigatório)"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lista_produtos_textViewPreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF / CNPJ:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/cliente_et_cpfcnpj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Cpf ou CNPJ (obrigatório)"
                android:inputType="number|phone" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rg / Inscrição Estadual"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/cliente_et_rgie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Rg / Inscrição Estadual (Obrigatório)"
                android:inputType="number|phone" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone Fixo"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/cliente_et_telefone_fixo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone Movel"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/cliente_et_telefone_movel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/cliente_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingBottom="10dp" />

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >

			    <TextView
			        android:id="@+id/textView8"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.24"
			        android:text="Logradouro"
			        android:textAppearance="?android:attr/textAppearanceMedium" />

			    <TextView
			        android:id="@+id/textView9"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.07"
			        android:text="Número"
			        android:textAppearance="?android:attr/textAppearanceMedium" />

			    <TextView
			        android:id="@+id/textView10"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.18"
			        android:text="Bairro"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			    
			</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/cliente_et_logradouro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.24"
                    android:hint="Logradouro (Obrigatório)"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/cliente_et_numero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.08"
                    android:hint="Número"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/cliente_et_bairro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.16"
                    android:hint="Bairro (Obrigatório)"
                    android:inputType="textPersonName" />
                                
            </LinearLayout>

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >

			    <TextView
			        android:id="@+id/textView11"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.24"
			        android:text="Cidade"
			        android:textAppearance="?android:attr/textAppearanceMedium" />

			    <TextView
			        android:id="@+id/textView12"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.08"
			        android:text="UF"
			        android:textAppearance="?android:attr/textAppearanceMedium" />

			    <TextView
			        android:id="@+id/textView13"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.17"
			        android:text="CEP"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			    
			</LinearLayout>

			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/cliente_et_cidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.24"
                    android:hint="Cidade"
                    android:inputType="textPersonName" />

                <Spinner
                    android:id="@+id/clientes_sp_uf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.08" />

                <EditText
                    android:id="@+id/cliente_et_cep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.17"
                    android:hint="CEP"
                    android:inputType="textPersonName" />
           
            </LinearLayout>

			<TextView
			    android:id="@+id/textView7"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Observação"
			    android:textAppearance="?android:attr/textAppearanceMedium" />

			<EditText
			    android:id="@+id/cliente_et_observacao"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
                android:hint="Observações"
			    android:inputType="textMultiLine" >

			</EditText>

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center" >

				<Button
		            android:id="@+id/bt_clientes_salvar"
		            style="@style/ButtonSave"
		            android:text="@string/btn_salvar" />

				<Button
		            android:id="@+id/bt_clientes_cancelar"
		            style="@style/ButtonCancel" />
						    
			</LinearLayout>
			
    </LinearLayout>

</ScrollView>